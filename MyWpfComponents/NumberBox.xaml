<UserControl x:Class="MyWpfComponents.NumberBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyWpfComponents"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300" 
             VerticalAlignment="Stretch" HorizontalAlignment="Stretch">

    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <TextBox x:Name="TextBox" MaxLines="1" Text="0"
                 PreviewTextInput="TextBox_OnPreviewTextInput" TextInput="TextBox_OnTextInput" TextChanged="TextBox_OnTextChanged" 
                 VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
    </Grid>
</UserControl>
