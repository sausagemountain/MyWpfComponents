<Application x:Class="MyWpfComponents.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MyWpfComponents"
             StartupUri="MainWindow.xaml" 
             Startup="App_OnStartup" Exit="App_OnExit">
    <Application.Resources>
        <SolidColorBrush x:Key="Back" Color="GhostWhite"/>
        <SolidColorBrush x:Key="Stroke" Color="CornflowerBlue"/>
        <SolidColorBrush x:Key="Ticks" Color="Orchid"/>
        <SolidColorBrush x:Key="Fill" Color="GreenYellow"/>
        <LinearGradientBrush x:Key="Back2" StartPoint="1 0.1" EndPoint="1 0.55">
            <LinearGradientBrush.GradientStops>
                <GradientStop Color="Transparent" Offset="1"/>
                <GradientStop Color="GhostWhite" Offset="0"/>
            </LinearGradientBrush.GradientStops>
        </LinearGradientBrush>
    </Application.Resources>
</Application>
